body
	font-family: Montserrat

.purple-bg
	background-color: purple
.light-green-bg
	background-color: light-green
.white-bg
	background-color: white
	color: text-black
.dark-blue-bg
	background-color darkest-blue
.deep-blue-bg
	background-color deep-blue
.light-blue-bg
	background-color light-blue
.green-bg
	background-color green

.header
	height: 30px
	line-height: 30px
	vertical-align: middle

.valid
	color: green !important

.invalid
	color: red !important

.current
	border: solid 1px black

#container
	color: white
	background-color: darkest-blue
	text-align: center
	text-transform: uppercase
	position: absolute
	min-width: 320px
	width: 100%
	height: 100%
	h1
		font-size: 6em
		position: relative
		width: 100%
		padding-bottom: 30px
	h2 
		font-size: 2.5em
	h3
		font-size: 1.8em
	a
		color: white
		text-decoration: none
		&:hover
			background-color: rgba(255,255,255,0.4)
			cursor: pointer
	.header
		height: 30px
		line-height: 30px
		vertical-align: middle
		padding: 0 30px
		a
			float left
			color light-grey
			position absolute
			display block
	.body-text
		font-family: lato
		text-transform: none
		font-weight 300
		margin 20px 0

.content-wrapper
	height: 100%

// LOGIN SCREEN
#login-info
	height: 150px
	position: absolute
	top: 0
	right: 0
	left: 0
	bottom: 0
	margin: auto
#login-button
	display block
	margin 0 auto
	font-size: 1.3em
	border: 1px solid
	padding 5px 100px
	width: 300px

// ELECTION LIST
#election-list
	h1
		padding-bottom 0
		margin -5px 0
	h2
		margin-bottom 20px
	#ballot-counter
		margin-bottom 30px
.election-list-item
	padding: 20px 0
	position relative
	&:hover
		background-color: rgba(255, 255, 255, 0.2)
	// .ballot-name
	// 	padding 0 50px
	h3
		display: inline-block
		padding 0 40px
	.right-arrow
		position: absolute
		top: 0
		right: 0
		bottom: 0
		margin: auto 0
		padding 0
		height: 30px
		margin-right: 20px
		
.centered-container
	max-width 800px
	margin 0 auto
	padding 30px 0

//BALLOT DESCRIPTION
#ballot-description-wrapper
	margin-top 10%
	p
		margin-bottom 30px

//VOTING SCREEN
.circular-photo
	height: 200px
	width: 200px
	display: inline-block
	margin-right: 5px
	overflow: hidden
	border-radius: 100%
	background-size: cover
	background-position: center
	background-repeat: no-repeat

.small-button
	border 1px solid
	padding 3px 50px

@media screen and (max-width: 480px)
	h1
		font-size: 3.5em
	h3
		font-size 1.5em
	#election-list
		h1
			padding-bottom 0
			margin 0
#login-button
	padding 5px 50px
