// html, body, div, a
//   color: black !important
body
	color: white
	background-color: darkest-blue
	text-align: center

.purple-bg
	background-color: purple
.light-green-bg
	background-color: light-green

#container
	text-transform: uppercase
	position: absolute
	min-width: 320px
	width: 100%
	height: 100%
	a
		color: white
		text-decoration: none
		&:hover
			background-color: rgba(255,255,255,0.4)
		
.content-wrapper
	height: 100%

h1
	font-size: 6em
	position: relative
	width: 100%
	padding-bottom: 30px

// LOGIN SCREEN
#login-info
	height: 150px
	position: absolute
	top: 0
	right: 0
	left: 0
	bottom: 0
	margin: auto
#login-button
	font-size: 1.3em
	border: 1px solid
	padding 5px 100px

// ELECTION LIST
.election-list-item
	padding: 10px 0
	font-size: 2em
	h3
		display: inline-block
	.right-arrow
		float: right

#election-list
	h1
		padding-bottom 0

@media screen and (max-width: 480px)
	h1
		font-size: 3.5em
